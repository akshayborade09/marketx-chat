// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom","dom.iterable","esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "typeRoots": ["types", "node_modules/@types"],
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    // if your augmentation is at the repo root:
    "next-auth.d.ts",
    // and/or if it lives in types/:
    "types/next-auth.d.ts"
  ],
  "exclude": ["node_modules"]
}
